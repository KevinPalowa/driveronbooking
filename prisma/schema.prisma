generator client {
  provider = "prisma-client-js"
}

enum Gender {
  M
  F
}

enum Role {
    admin
    employee
    driver
  }
datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOWDATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
  role Role
}


model Route {
  id            Int    @id @default(autoincrement())
  destination   String
  estimation    String
  capacity      Int
  departureTime String
}
